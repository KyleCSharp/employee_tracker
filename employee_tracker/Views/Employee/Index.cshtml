<!--this is my employee view this shows the employee page-->
@using employee_tracker.domain.Models;
@model IEnumerable<Employee>


@{
    ViewData["Title"] = "Index";
}

<div class="cover">
    <h1>Employee List</h1>

<div style="display: block">
    <a class='btn btn-primary btn-lg' href="/employee/InsertEmployee">Add a new employee</a>
</div>

@using (Html.BeginForm("SeachForEmployeesFromDataBase", "Employee", "post"))
{
  <div class="navbar">
    <input type="text" placeholder="Search.." name="name">
  </div>
}


<table class="table">
    <tr>
        
            <th>ID</th>
            <th>Name</th>
            <th>Address 1</th>
            <th>Address 2</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>phone</th>
            <th>Email</th>
            <th>Pay Rate</th>
            <th>Hired At</th>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <td><a class='btn btn-primary btn-sm' href=/employee/ViewID/@employee.ID>@employee.ID</a></td>
            <td>@employee.Name</td>
            <td>@employee.Address_1</td>
            <td>@employee.Address_2</td>
            <td>@employee.City</td>
            <td>@employee.State</td>
            <td>@employee.Zip_Code</td>
            <td>@employee.phone</td>
            <td>@employee.Email</td>
            <td>@employee.Pay_Rate</td>
            <td>@employee.Hired_at</td>
        </tr>

    }
</table>
</div>


            